{% macro bas_san(data) %}
  {% set id_base = data.access_target | replace("#", "") %}
  <div class="space-y-4">
    {% call com.alert(variant='blue', classes='space-y-4') %}
      <p>Access this item from the BAS SAN (also known as 'Samba' or the 'U drive').</p>
      {% if not data.restricted %}
        <p>The BAS SAN is an internal service. Please <a class="{{ com.link_classes() }}" href="#tab-contact">make an enquiry</a> if you are an external user.</p>
      {% endif %}
    {% endcall %}
    <dl class="space-y-4">
      {% call com.dl_item(title='Posix Path (for Unix, HPC and central workstations)', id=id_base + '-posix') %}
        {{ com.copyable_path(data.posix_path) }}
      {% endcall %}
      {% call com.dl_item(title='UNC Path (for Windows via Samba)', id=id_base + '-unc') %}
        {{ com.copyable_path(data.unc_path) }}
      {% endcall %}
    </dl>
  </div>
{% endmacro %}

{% macro bas_published_map() %}
  {% call com.alert(variant='blue', classes='space-y-4') %}
    <p>This item is available to purchase as a physical paper map. Details regarding our suppliers can be found via <a class="{{ com.link_classes() }}" href="https://www.bas.ac.uk/data/our-data/maps/how-to-order-a-map/">our website {{ com.ext_link_i() }}</a>.</p>
    <p>This item is available free of charge to BAS staff members. Please <a class="{{ com.link_classes() }}" href="#tab-contact">contact MAGIC</a> to request a copy.</p>
  {% endcall %}
{% endmacro %}
